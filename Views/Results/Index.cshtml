@model IEnumerable<f1website.Models.Result>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Results", FormMethod.Get))
            {
                <label>Filter by drivers:</label> @Html.DropDownList("Category", "All")
                <input type="Submit" value="Filter" />
                <input type="hidden" name="Search" id="Search" value="@ViewBag.Search" />
            }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Driver1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Driver2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position2)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Driver1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Driver2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position2)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
